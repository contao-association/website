    <meta name="theme-color" content="#ffffff">
    <?php $this->endblock(); ?>

    <?= $this->framework ?>
    <link type="text/css" rel="stylesheet" href="<?= $this->asset('app.css') ?>">
    <?= $this->stylesheets ?>
    <?= $this->mooScripts ?>
    <?= $this->head ?>
  <?php $this->endblock(); ?>

</head>
<body<?php if ($this->class): ?> class="<?= $this->class ?>"<?php endif; ?><?php if ($this->onload): ?> onload="<?= $this->onload ?>"<?php endif; ?> itemscope itemtype="http://schema.org/WebPage">

  <?php $this->block('body'); ?>
    <?php $this->sections('top'); ?>

    <div class="wrapper">

      <?php $this->block('header'); ?>
        <?php if ($this->header): ?>
          <header class="section-header" itemscope itemtype="http://schema.org/WPHeader">
            <div class="section-header__inside">
              <?= $this->header ?>
            </div>
          </header>
        <?php endif; ?>
      <?php $this->endblock(); ?>

      <?php $this->sections('before'); ?>

      <?php $this->block('container'); ?>
        <div class="layout__columns layout__columns--<?= $this->layout->cols ?>">
          <?php $this->block('main'); ?>
            <main class="section-main" itemscope itemtype="http://schema.org/WebPageElement" itemprop="mainContentOfPage">
              <div class="section-main__inside">
                <?= $this->main ?>
              </div>
              <?php $this->sections('main'); ?>
            </main>
          <?php $this->endblock(); ?>

          <?php $this->block('left'); ?>
            <?php if ($this->left): ?>
              <aside class="section-left">
                <div class="section-left__inside">
                  <?= $this->left ?>
                </div>
              </aside>
            <?php endif; ?>
          <?php $this->endblock(); ?>

          <?php $this->block('right'); ?>
            <?php if ($this->right): ?>
              <aside class="section-right">
                <div class="section-right__inside">
                  <?= $this->right ?>
                </div>
              </aside>
            <?php endif; ?>
          <?php $this->endblock(); ?>

        </div>
      <?php $this->endblock(); ?>

      <?php $this->sections('after'); ?>

      <?php $this->block('footer'); ?>
        <?php if ($this->footer): ?>
          <footer class="section-footer" itemscope itemtype="http://schema.org/WPFooter">
            <div class="section-footer__inside">
              <?= $this->footer ?>
            </div>
          </footer>
        <?php endif; ?>
      <?php $this->endblock(); ?>

    </div>

    <?php $this->sections('bottom'); ?>
  <?php $this->endblock(); ?>

  <?= $this->mootools ?>
  <script src="<?= $this->asset('app.js') ?>" async></script>
  <script src="https://contao.org/files/js/network.js" async></script>

